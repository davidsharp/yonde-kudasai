{
  "manifest_version": 2,

  "name": "Yonde Kudasai",
  "description": "This extension reads Japanese text",
  "version": "0.0.0",

  "omnibox": { "keyword" : "yonde" },
  "browser_action": {
    "default_icon": "icon.png"
  },
  "background": {
    "scripts": ["popup.js"],
    "persistent": false
  },
  "content_scripts":[{
    "matches":["http://*/*","https://*/*"],
    "js":["inject.js"]
  }],
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "notifications",
    "tabs"
  ],
  "commands": {
        "yonde-kudasai": {
          "suggested_key": {
            "default": "Ctrl+Shift+Y",
            "mac": "Command+Shift+Y"
          },
          "description": "Read 日本語"
        }
      }
}
